@inherits TvViewBase

<div class="table-wrapper">
  @if (Open)
  {
  <table class="table-viewer">
    <thead>
      <tr>
        <th @onclick="ToggleOpen" class="title" colspan="2">
          <div class="title-wrap">
            <span class="key-name">
              (@all.Count() items)
            </span>
          </div>
        </th>
      </tr>
    </thead>
    <tbody>
      @foreach (var (index, item) in DataArray)
      {
        <tr>
          <td class="index">@index</td>
          <td class="item">
            <TvElementView Data="@item" Options="Options" Depth="Depth + 1"/>
          </td>
        </tr>
      }
      @if (HasMoreItems)
      {
        <tr>
          <td class="index"></td>
          <td>
            <button @onclick="@(() => MoreItems())">
              more
            </button>
          </td>
        </tr>
      }
    </tbody>
  </table>
  }
  else
  {
    <div class="title" @onclick="ToggleOpen">
      array (length: @all.Count())
    </div>
  }
</div>

<style>
  .index {
    font-style: italic;
    color: #999;
    text-align: right;
    min-width: 40px;
    border: 1px solid #ddd;
    border-right: 0px;
    padding-right: 5px;
  }
  .item {
    border: 1px solid #ddd;
    border-left: 0px;
    padding-left: 5px;
    min-width: 100px;
  }
</style>