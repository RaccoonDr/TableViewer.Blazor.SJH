@inherits TvViewBase

<div>
  <table class="table-viewer">
    <thead>
      <tr>
        @foreach (var key in Keys)
        {
          <th class="title">@key</th>
        }
      </tr>
    </thead>
    <tbody>
      @foreach (var item in array)
      {
        <tr>
          @if (item == null)
          {
            <td colspan="@Keys.Count()">
              <TvNullView Options="Options" Depth="Depth + 1" />
            </td>
          }
          else
          {
            @foreach (var key in Keys)
            {
              var value = GetValue(item, key);
              <td class="value">
                <TvElementView
                  Parent="item"
                  Data="value"
                  Options="Options"
                  Depth="Depth + 1"
                />
              </td>
            }
          }
        </tr>
      }
    </tbody>
  </table>
</div>